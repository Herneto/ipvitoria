	    $(window).on('scroll',function(){
			if($(window).scrollTop()){
				$('nav').addClass("black");
				$("#dropdown-menu").addClass("black");
			}else{
				$('nav').removeClass("black");
				$("#dropdown-menu").removeClass("black");
